<P id="notice">
	<%= notice %>
</P>

<h1 class="index-title">Books</h1>
<div class="table-box">
 <table>
   <tr>
     <th>Title</th>
     <th>Body</th>
   </tr>
   <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %>
      </td>
      <td><%= link_to "Edit", edit_book_path(book.id) %>
      </td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete %>
      </td>
    </tr>
   <% end %>
 </table>
</div>

<h1 class="new">New Book</h1>
<%= form_for(@book) do |f| %>
	<h4 class="new-title">Title</h4>
	<%= f.text_field :title %>
	<h4 class="new-body">Body</h4>
	<%= f.text_area :body %>

	<p class="new-create"><%= f.submit 'create book' %></p>

<% end %>